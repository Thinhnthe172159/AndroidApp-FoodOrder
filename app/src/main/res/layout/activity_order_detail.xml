<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white"
    android:fillViewport="true">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Order Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtOrderTitle"
                    android:text="My Order Info"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp"
                    android:layout_height="20dp"
                    android:layout_width="50dp" />

                <TextView
                    android:id="@+id/txtOrderType"
                    android:text="Dine-in"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"
                    android:layout_height="20dp"
                    android:layout_width="50dp"/>

                <TextView
                    android:id="@+id/txtOrderPhone"
                    android:text="(503) 338-5200"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"
                    android:layout_height="20dp"
                    android:layout_width="50dp"/>

                <TextView
                    android:id="@+id/txtOrderAddress"
                    android:text="Table 5 - Zone A"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"
                    android:layout_height="20dp"
                    android:layout_width="50dp"/>

                <TextView
                    android:id="@+id/txtOrderTime"
                    android:text="29 Nov, 01:20 pm"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"
                    android:layout_height="20dp"
                    android:layout_width="50dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- RecyclerView danh sách món ăn -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerOrderItems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:layout_marginBottom="32dp"
            android:overScrollMode="never" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
